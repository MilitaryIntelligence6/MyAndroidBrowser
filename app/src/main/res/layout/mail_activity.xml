<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--toolbar的使用-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_mail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_scrollFlags="scroll|enterAlways|snap|exitUntilCollapsed"
        android:weightSum="1"
        android:title="发送邮件" >
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/receiver_mail"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2.2"
            android:text="收件人邮箱地址:"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/receiver_mail_text"
            android:layout_height="wrap_content"
            android:layout_weight="4.9"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mail_theme"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="邮件主题:"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/mail_theme_text"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mail_contain"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="邮件内容:"
            android:layout_marginLeft="10dp" />
        <EditText
            android:id="@+id/mail_contain_text"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:maxLines="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sender_mail"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2.2"
            android:text="发件人邮箱地址:"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/sender_mail_text"
            android:layout_height="wrap_content"
            android:layout_weight="4.9"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sender_name"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="发件人用户名:"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/sender_name_text"
            android:layout_height="wrap_content"
            android:layout_weight="4.9"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sender_password"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="3.3"
            android:text="发件人邮箱授权密码:"
            android:layout_marginLeft="10dp" />
        <EditText
            android:id="@+id/sender_password_text"
            android:layout_height="wrap_content"
            android:layout_weight="4.9"
            android:layout_width="0dp"
            android:inputType="textPassword"
            android:layout_marginRight="10dp"
            android:hint="请不要输入邮箱登陆密码"
            android:singleLine="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/reset_bt"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="重置"
            android:background="@null"/>
        <Button
            android:id="@+id/send_bt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="确认发送"
            android:background="@null" />
    </LinearLayout>

</LinearLayout>